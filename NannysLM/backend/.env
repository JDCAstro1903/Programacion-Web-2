# Configuración de variables de entorno para NannysLM Backend

# Base de datos MySQL (configuración adaptada desde PHP)
DATABASE_URL=mysql+pymysql://root:root@localhost:3306/nannys_lm
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=nannys_lm

# Configuración de la aplicación
APP_NAME=NannysLM API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Seguridad y autenticación
SECRET_KEY=nannys-lm-secret-key-2025-desarrollo-no-usar-en-produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS - permitir conexiones desde Angular
ALLOWED_ORIGINS=["http://localhost:4200","http://127.0.0.1:4200"]
ALLOWED_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
ALLOWED_HEADERS=["*"]

# Archivos
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880

# Configuración de correo (para futuras funcionalidades)
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@nannys-lm.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_USE_TLS=True