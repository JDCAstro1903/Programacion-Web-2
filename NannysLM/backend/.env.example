# Configuración de variables de entorno para NannysLM Backend

# Base de datos MySQL
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/nannys_lm
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=nannys_lm

# Configuración de la aplicación
APP_NAME=NannysLM API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Seguridad y autenticación
SECRET_KEY=tu-clave-secreta-muy-segura-aqui-cambiar-en-produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Configuración de archivos
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880  # 5MB en bytes

# Email (para futuras implementaciones)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=tu-email@gmail.com
EMAIL_PASSWORD=tu-password-de-app

# Configuración de pagos (para futuras implementaciones)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Redis (para cache - opcional)
REDIS_URL=redis://localhost:6379/0